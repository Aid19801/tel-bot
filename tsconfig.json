{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "es6"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.js",
    "webpack.config.js",
    "webpack.prod.js",
    "webpack.common.js"
  ]
}
